          Why attribute:
          - Required.
          - Type: xs:string.
        ]]>
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="TDR">
    <xs:attribute ref="abt_test:Folder" use="required"/>
    <xs:attributeGroup ref="abt_test:SerialNumberAttributes"/>
  </xs:complexType>

  <xs:complexType name="SQL">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        <![CDATA[
          SQL complexType:
          -Type: SQL.
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:attribute name="ConnectionString" use="required" type="xs:string">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          <![CDATA[
          ConnectionString attribute:
          - Required.
          - Type: xs:string.
          ]]>
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attributeGroup ref="abt_test:SerialNumberAttributes"/>
  </xs:complexType>

  <xs:complexType name="Stationary">
    <xs:attributeGroup ref="abt_test:InstrumentAttributeGroup"/>
  </xs:complexType>

  <xs:complexType name="Mobile">
    <xs:attributeGroup ref="abt_test:InstrumentAttributeGroup"/>
    <xs:attribute name="Detail" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          <![CDATA[
          Detail attribute:
